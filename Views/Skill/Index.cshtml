@using CV_MVC.Models.Entity
@model List<TBLSKILL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                              
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Skill</th>
                                            <th>Progress</th>
                                            <th style="width: 40px">%</th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            if (item.Percentage <= 60 && item.Percentage >= 0)
                                            {
                                                color = "bg-danger";
                                            }
                                            if (item.Percentage > 60 && item.Percentage <= 89)
                                            {
                                                color = "bg-warning";
                                            }
                                            if (item.Percentage > 89 && item.Percentage <= 100)
                                            {
                                                color = "bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar @color" style="width: @item.Percentage%"></div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge @color">@item.Percentage</span>
                                                </td>
                                                <td>
                                                    <a href="/Skill/EditSkill/@item.ID" class="btn btn-outline-warning">Edit</a>
                                                    <a class="btn btn-outline-danger" href="/Skill/DeleteSkill/@item.ID" >Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <a href="/Skill/AddSkill" class="btn btn-outline-primary">Add New Skill</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>
